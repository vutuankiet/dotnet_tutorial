@model WebSales.Models.EF.Category

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow container col-12 col-md-6">
        <div class="card-body">
            <h2>Chinh sua</h2>
            <h4>Loai san pham</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                <label class="control-label">Ten Tieng Anh</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <label class="control-label">Ten Tieng Viet</label>
                @Html.EditorFor(model => model.NameVN, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => model.NameVN, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 p-0">
                    <input type="submit" value="Edit" class="btn btn-outline-success" />
                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
